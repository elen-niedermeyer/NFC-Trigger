<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="8dp"
    tools:context=".CreateTrigger.NewTriggerActivity">

    <EditText
        android:id="@+id/activity_new_trigger_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/activity_new_trigger_btn_write"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_new_trigger_btn_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_nfc_tag"
        app:layout_constraintBottom_toTopOf="@id/activity_new_trigger_actions"
        app:layout_constraintTop_toBottomOf="@id/activity_new_trigger_name" />

    <ListView
        android:id="@+id/activity_new_trigger_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_new_trigger_btn_write" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_new_trigger_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_action_add" />


</android.support.constraint.ConstraintLayout>