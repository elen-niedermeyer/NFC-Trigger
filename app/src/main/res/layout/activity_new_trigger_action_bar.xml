<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_new_trigger_action_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Alarm: 08:45h"
        app:layout_constraintBottom_toBottomOf="@id/activity_new_trigger_action_bar_btn_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_new_trigger_action_bar_btn_edit" />

    <ImageButton
        android:id="@+id/activity_new_trigger_action_bar_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/activity_new_trigger_action_bar_btn_delete"
        app:srcCompat="@drawable/ic_action_edit"
        android:contentDescription="@string/content_desc_edit_action" />

    <ImageButton
        android:id="@+id/activity_new_trigger_action_bar_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/content_desc_delete_action"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_delete" />

</android.support.constraint.ConstraintLayout>